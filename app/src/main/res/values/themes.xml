<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/owl_blue_light</item>
        <item name="colorPrimaryVariant">@color/light_blue_600</item>
        <item name="colorOnPrimary">@color/text_on_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/owl_blue</item>
        <item name="colorSecondaryVariant">@color/owl_blue_dark</item>
        <item name="colorOnSecondary">@color/text_on_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/material_black</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/product_sans_font_family</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="contrast_background">@color/white</item>
        <item name="contrast_theme_color">@color/material_black</item>

        <item name="colorSecondaryVariantLight">@color/owl_blue_light</item>
        <item name="colorOnBackground">@color/text_on_yellow</item>

        <item name="theme_text">@color/black</item>
        <item name="theme_text_light">#B2000000</item>
        <item name="text_on_dark_background">#FFFFFF</item>

        <item name="colorOther">@color/owl_blue_light</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="colorPrimaryComplementary">@color/owl_yellow</item>
        <item name="nav_header_color">@drawable/bg_gradient_yellow</item>

    </style>

    <style name="ThemeOverlay.MedsApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="SplashScreneTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image_light</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

</resources>